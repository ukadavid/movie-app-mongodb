  <main>
    <div class="album py-5 bg-container">
      <div class="container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
          <% movieList.forEach((movie) => { %>
            <div class="col mb-4">
              <div class="card shadow-sm h-100">
                <img src=<%= movie.image %> class="card-img-top"/>
                <div class="card-body">
                  <h5 class="card-title"><%= movie.title%></h5>
                  <div class="card-text-wrapper">
                    <p class="card-text"><%= movie.description%></p>
                  </div>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group mt-3">
                      <button type="button" class="btn btn-sm btn-design-price">Price</button>
                      <button type="button" class="btn btn-sm btn-design-price">₦<%= movie.price %></button>
                    </div>
                    <small class=" mt-3 text-muted">
                      <% let timeDiff = new Date() - new Date(movie.updatedAt); %>
                      <% let timeAgo; %>
                      <% if (timeDiff < 60000) { %>
                        <% timeAgo = `${Math.floor(Math.abs(timeDiff / 1000))} seconds ago`; %>
                      <% } else if (timeDiff < 3600000) { %>
                        <% timeAgo = `${Math.floor(Math.abs(timeDiff / 60000))} minutes ago`; %>
                      <% } else if (timeDiff < 86400000) { // If less than 24 hours %>
                        <% timeAgo = `${Math.floor(Math.abs(timeDiff / 3600000))} hours ago`; %>
                      <% } else if (timeDiff < 2592000000) { // If less than a month %>
                        <% timeAgo = `${Math.floor(Math.abs(timeDiff / 86400000))} days ago`; %>
                      <% } else { %>
                        <% timeAgo = `${Math.floor(Math.abs(timeDiff / 2592000000))} months ago`; %>
                      <% } %>
                      <%= timeAgo %>
                    </small>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
        <nav>
          <ul class="pagination justify-content-center">
            <% if (currentPage > 1) { %>
              <li class="page-item"><a class="page-link" href="?page=<%= currentPage - 1 %>">&laquo; Previous</a></li>
            <% } %>
            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <% if (i === currentPage) { %>active<% } %>"><a class="page-link" href="?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (currentPage < totalPages) { %>
              <li class="page-item"><a class="page-link" href="?page=<%= currentPage + 1 %>">Next &raquo;</a></li>
            <% } %>
          </ul>
        </nav>
      </div>
    </div>
   
  </main>
 
  

