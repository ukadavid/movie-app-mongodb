<%- include("./partials/header") %>
<link rel="stylesheet" href="/stylesheets/styles.css" />
<title>Login</title>
</head>
<body>
    
    <section>
        <div class="color">
         </div>
        <div class="color">
         </div>
        <div class="color">
         </div>  
        <div class="box">
            <div class="square" style="--i:0"></div>
            <div class="square" style="--i:1"></div>
            <div class="square" style="--i:2"></div>
            <div class="square" style="--i:3"></div>
            <div class="square" style="--i:4"></div>
            
            <div class="container">
                <div class="form">
                    <h2>Sign in</h2>
                    <form method="POST" action="/users/login">
                        <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                            <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                              <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                            </symbol>
                            <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
                              <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
                            </symbol>
                            <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                              <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                            </symbol>
                          </svg>
                         
                        <div class="inputBox">
                            <% if (locals.error) { %>
                                <% if (error === "email is not allowed to be empty") { %>
                                <p class="error"> Email is not allowed to be empty, please fill
                                </p>
                                <% } %>
                           <% } %>

                           <% if (locals.error) { %>
                            <% if (error.includes("Email already exists")) { %>
                              <p class="error">Email is already taken.</p>
                            <% } else if (error === "Invalid email/password"){ %>
                              <p class="error">Please input the correct email/password</p>
                            <% } %>
                          <% } %>
                            <input type="email" placeholder="Email" id="name"
                            name="email">
                        </div>
                        <div class="inputBox">
                            <% if (locals.error) { %>
                                <% if (error === "password is not allowed to be empty") { %>
                                <p class="error"> Password is not allowed to be empty, please fill
                                </p>
                                <% } %>
                           <% } %>
                            <input type="password" placeholder="password" id="password"
                            name="password">
                        </div>
                        <div class="inputBox">
                            <input type="submit">
                        </div>
                        <p class="forget">Forget password ?<a href="/update"> Click Here </a></p>
                        <p class="forget">New to ZeeFlix? <a href="/register"> Sign up now</a></p>
                        <small class="forget-small">Back to <a href="/">home</a></small>
                    </form>
                </div>
            </div>
        </div>
    </section>

<%- include("./partials/footer") %>